    /** Creates new form NovaMaturidade */
    public NovaMaturidade(java.awt.Frame parent, boolean modal, Maturidade maturidade) {
        super(parent, modal);
        initComponents();

        atualizar = (maturidade != null && maturidade.getIdmaturidade() != null && !maturidade.getIdmaturidade().equals(0));
        if (atualizar) {
            salvar.setText("Atualizar");
            desc.setText(maturidade.getDescmaturidade());
            nivel.setText(maturidade.getIdmaturidade().toString());
            this.maturidade = maturidade;
        } else {
            this.maturidade = new Maturidade();
            salvar.setText("Salvar");
        }
        setTitle("Novo nível de Maturidade");
    }

