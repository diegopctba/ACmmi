    private void deleteMaturidadeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteMaturidadeActionPerformed
        try {

            int certeza = 0;
            Object[] opcoes = {"Sim", "Não"};
            certeza = JOptionPane.showOptionDialog(null, "Deseja excluir o(s) item(ns) selecionado(s)?", "Confirmação",
                    JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE, null, opcoes, opcoes[0]);
            if (certeza == 0) {
                int[] delete = listaMaturidade.getSelectedIndices();
                MaturidadeFacade facade = new MaturidadeFacade();
                for (int x = 0; x < delete.length; x++) {
                    facade.deletarMaturidade(maturidade.getElementAt(delete[x]));
                }
                System.out.println("Atualizando lista de Maturidade");
                maturidade = new ListaMaturidade(facade.retornaTodasMaturidade());
                System.out.println("Revalidando");
                listaMaturidade = new JList(maturidade);
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
        }
    }//GEN-LAST:event_deleteMaturidadeActionPerformed

    private void addMaturidadeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addMaturidadeActionPerformed
        try {
            new NovaMaturidade(MainFrame.getFrames()[0], true, null).setVisible(true);
            maturidade = new ListaMaturidade(new MaturidadeFacade().retornaTodasMaturidade());
            listaMaturidade.revalidate();
        } catch (Exception e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(this, e);
        }
    }//GEN-LAST:event_addMaturidadeActionPerformed
